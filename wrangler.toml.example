# Cloudflare Pages 配置文件模板
# 复制为 wrangler.toml 并填入实际配置值

name = "nuxt-template"
compatibility_date = "2024-10-28"
compatibility_flags = ["nodejs_compat"]

# Pages 构建输出目录
pages_build_output_dir = ".output/public"

# D1 数据库绑定
[[d1_databases]]
binding = "DB"
database_name = "nuxt-template-db"
# database_id = "YOUR_DATABASE_ID_HERE"  # 从 Cloudflare Dashboard 获取

# 环境变量
[vars]
NODE_ENV = "production"

# 预览环境配置
[env.preview]
name = "nuxt-template-preview"

# 预览环境 D1 绑定
[[env.preview.d1_databases]]
binding = "DB"
database_name = "nuxt-template-db"
# database_id = "YOUR_DATABASE_ID_HERE"  # 与主环境相同的数据库 ID

# 生产环境配置
[env.production]
name = "nuxt-template-prod"

# 生产环境 D1 绑定
[[env.production.d1_databases]]
binding = "DB"
database_name = "nuxt-template-db"
# database_id = "YOUR_DATABASE_ID_HERE"  # 与主环境相同的数据库 ID